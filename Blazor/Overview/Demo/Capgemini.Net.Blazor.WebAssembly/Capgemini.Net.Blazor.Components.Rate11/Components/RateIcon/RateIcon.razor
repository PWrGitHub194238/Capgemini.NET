@*<i class="@(Focused ^ Rate <= Value ? ActiveCss : InActiveCss) @(Icon) cursor-pointer"
    @onclick="@(() => ValueChanged.InvokeAsync(Rate))"
    @onmouseover="@(() => Focused = true)"
    @onmouseout="@(() => Focused = false)"></i>*@

@*<i class="@((Focused && Rate <= TempRateValue) || (!Focused && Rate <= Value) ? ActiveCss : InActiveCss) @(Icon) cursor-pointer"
   alt="@Rate"
   @onclick="@(() => ValueChanged.InvokeAsync(Rate))"
   @onmouseover="@(() => TempRateValue = Rate)"></i>*@

<i class="@((Context.Focused && Rate <= Context.TempRateValue) || (!Context.Focused && Rate <= Value) ? ActiveCss : InActiveCss) @(Icon) cursor-pointer"
   alt="@Rate"
   @onclick="@(() => ValueChanged.InvokeAsync(Rate))"
   @onmouseover="@(() => Context.TempRateValue = Rate)"></i>