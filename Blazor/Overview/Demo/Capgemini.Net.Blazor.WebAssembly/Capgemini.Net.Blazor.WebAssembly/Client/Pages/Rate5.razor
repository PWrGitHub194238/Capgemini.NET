@inherits Rate5Base

<div>
    <div>
        @(RateContext.AvgRate)
    </div>
    <div>
        @for (int i = 0; i < RateContext.MaxRate; i += 1)
        {
            var index = i;
            <i class="@(IsActive(index) ? Rate5Base.ACTIVE_STYLE : Rate5Base.INACTIVE_STYLE) @(RateContext.Icon) cursor-pointer"
               @onclick="SetRate"
               @onmouseover="@(() => ShowRate(index))"
               @onmouseout="RevertRate"></i>
        }
    </div>
</div>