@inherits Rate3Base

@for (int i = 0; i < @MaxRate; i += 1)
{
    var index = i;
    <i class="@(IsActive(index) ? Rate3Base.ACTIVE_STYLE : Rate3Base.INACTIVE_STYLE) @Icon cursor-pointer"
       @onclick="SetRate"
       @onmouseover="@(() => ShowRate(index))"
       @onmouseout="RevertRate"></i>
}

@code {
    public int MyProperty { get; set; } = 5;
}