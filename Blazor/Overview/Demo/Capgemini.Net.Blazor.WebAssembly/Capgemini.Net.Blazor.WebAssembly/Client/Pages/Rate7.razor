@inherits Rate7Base

@for (int i = 0; i < RateContext.MaxRate; i += 1)
{
    var index = i;
    <i class="@(IsActive(index) ? Rate7Base.ACTIVE_STYLE : Rate7Base.INACTIVE_STYLE) @(RateContext.Icon) cursor-pointer"
        @onclick="SetRate"
        @onmouseover="@(() => ShowRate(index))"
        @onmouseout="RevertRate"></i>
}