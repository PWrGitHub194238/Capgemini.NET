@using Capgemini.Net.Blazor.Components.Demo.Examples.Demo7.End

@switch (Example)
{
    case 1:
        <ContainerComponent>
            <ChildContent>
                <DefaultRateComponent
                    MaxRate="@(context.MaxRate)"
                    Icon="@(context.Icon)" />
            </ChildContent>
            <AvgRate>
                <DefaultAverageRateComponent 
                    MinRate="@(context.MinRate)"
                    AvgRate="@(context.AvgRate)"
                    MaxRate="@(context.MaxRate)" />
            </AvgRate>
        </ContainerComponent>
        break;
    case 2:
        <ContainerComponent>
            <ChildContent>
                <AlternativeRateComponent
                    MaxRate="@(context.MaxRate)"
                    Icon="@(context.Icon)" />
            </ChildContent>
            <AvgRate>
                <AlternativeAverageRateComponent 
                    MinRate="@(context.MinRate)"
                    AvgRate="@(context.AvgRate)"
                    MaxRate="@(context.MaxRate)" />
            </AvgRate>
        </ContainerComponent>
        break;
    case 3:
        <ContainerComponent>
            <ChildContent>
                <Alternative2RateComponent
                    MaxRate="@(context.MaxRate)"
                    Icon="@(context.Icon)" />
            </ChildContent>
            <AvgRate>
                <Alternative2AverageRateComponent 
                    MinRate="@(context.MinRate)"
                    AvgRate="@(context.AvgRate)"
                    MaxRate="@(context.MaxRate)" />
            </AvgRate>
        </ContainerComponent>
        break;
    default:
        break;
}
