@inherits RateComponentBase

<div style="display: flex; flex-direction: row;" @onmouseout=@(() => { RevertRate(); TempRate = int.MinValue; })>
    @for (int i = 0; i < @MaxRate; i += 1)
    {
        int index = i;
        <div @onmouseover="@(() => { ShowRate(index); TempRate = index; })">
            <i class="@(IsActive(index) ? ACTIVE_STYLE : INACTIVE_STYLE) @Icon cursor-pointer" style="@GetHoveredStyle(index)" @onclick="@SetRate"></i>
        </div>
    }
</div>

@code {
    [Parameter]
    public int MaxRate { get; set; } = 5;

    [Parameter]
    public string Icon { get; set; } = "fa-star";
}